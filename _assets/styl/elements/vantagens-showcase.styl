.vantagens-showcase {
    
    h1, h2, h3, h4, h5 {
        font-weight 400 !important
        line-height 1.3
    }
    
    p {
        font-weight 100 !important
    }

    .vantagem {
        border-top 1px solid alpha(black, .1)
        overflow-x hidden // para a imagem não forçar rolagem
        
        &:last-child {
            border-bottom 1px solid alpha(black, .1)
        }
        
        .colored {
            color corPrincipal
        }
        
        .vantagem-content {
            display flex
        }
        
        .text-wrap {
            order 1
            margin-right 20px
            padding 80px 0
            flex 55

            display flex
            flex-direction column
            align-items flex-start
            justify-content center
            
            p {
                font-size 1.3rem
            }
            
            .subtitle {
                font-weight 300 !important
            }
            
            +below('small-tablet'){
                padding 30px 0
                p {
                    font-size 1rem
                }
            }
        }
        
        .img-wrap {
            order 2
            flex 45
            position relative
            
            img {
                height 100%
                position absolute
                left 0
            }
            
            +below('small-tablet'){
                display none
            }
        }
        
        &:nth-child(even){
            .text-wrap {
                order 3
                margin-right 0
                margin-left 20px
                flex 50
                
                +below('small-tablet') {
                    margin-left 0
                }
            }
            
            .img-wrap {
                flex 50
                img {
                    left initial
                    right 0
                }
            }
            
        }
    }
}

.colunas {
    display flex
    justify-content space-between
    flex-wrap wrap
    
    +below('mobile'){
        flex-direction column
    }

    .coluna {
        flex 1 0 140px
        margin-right 15px
        
        .coluna-title {
            font-size 1rem
            font-weight 600 !important
        }
        
        p.coluna-text {
            font-size 1rem
        }
        
        &:last-child {
            margin-right 0
        }
    }
}