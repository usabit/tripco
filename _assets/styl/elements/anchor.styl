.anchor {
    display inline
}

.page-anchor {
    background-color #a28356
    align-self stretch
    display flex
    align-items center
    text-align center
    justify-content center
    width 170px
    color white
    margin-left 20px
    text-transform uppercase
    position relative
    
    &:before, &:after {
        transform translate3d(0, 0, 0)
    }
    
    &:before {
        display block
        content ''
        position absolute
        width 100%
        height 2px
        left 0
        top 100%
        background-color #a28356
    }
    
    &:after {
        display block
        content ''
        position absolute
        width 100%
        height 1px
        left 0
        top calc(100% + 2px)

        border-style: solid;
        border-width: 15px 85px 0 85px;
        border-color: #a28356 transparent transparent transparent;
    }
    
    &.semSeta:after,
    &.semSeta:before {
        content none
    }
}