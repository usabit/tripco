.medium-posts {
    overflow hidden
    
    .post {
        col(1/3, cycle: 3)
        
        a {
            color alpha(black, .8)
        }

        .post-title {
            font-size 1rem
        }
        .post-subtitle {
            font-size .8rem
        }
        .post-writer {
            font-size .7rem
            color alpha(black, .6)
        }
        
        +below('small-tablet'){
            stack()
            margin-bottom 20px
            
            &:last-child {
                margin-bottom 0
            }
        }
    }
}