ul.funcionalidades-lista {
    width 100%
    overflow hidden

    li {
        col(1/4, gutter: 1, cycle: 4)
        display flex
        flex-direction column
        align-items center
        text-align center
        
        p {
            text-align center
        }
        
        +below('small-tablet'){
            col(1/2, uncycle: 4, cycle: 2)
            
            br {
                display none
            }
        }
    }
}