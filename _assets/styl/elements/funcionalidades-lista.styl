ul.funcionalidades-lista {
    width 100%
    overflow hidden
    
    display flex
    flex-wrap wrap

    li {
        flex 1 0 25%
        padding 10px
        display flex
        flex-direction column
        align-items center
        text-align center
        border-right 1px solid alpha(black, .2)
        
        &:last-child {
            border-right 0
        }

        p {
            text-align center
        }
        
        +below('m'){
            flex 1 0 50%
            margin 10px 0
            &:nth-child(2){
                border-right 0
            }
            
            br {
                display none
            }
        }
    }
}